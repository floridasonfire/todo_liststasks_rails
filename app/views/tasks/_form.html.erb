<%= render "layouts/errors", :object => @list %>

<%= form_for [@list, @task] do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.select :done, options_for_select([["This task is NOT done", false], ["This task is done", true]], @task.done) %>
  <%= f.submit %>
<% end %>
