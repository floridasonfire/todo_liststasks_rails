<%= render "layouts/errors", :object => @list %>

<div class="well">
<%= form_for [@list, @task], :html => { :class => "form-horizontal" } do |f| %>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div class="form-group">
  <%= f.label 'Done?' %>
  <%= f.select :done, options_for_select([["This task is NOT done", false], ["This task is done", true]], @task.done) %>
</div>
  <%= f.submit :class => 'btn btn-warning'%>
<% end %>
<br />
<p><%= link_to "Return to lists", lists_path, :class => 'btn btn-info'%></p>
</div>
</div>
